set -g default-terminal "screen-256color"
set -g history-limit 10000
set -g status-fg red 
set -g status-bg  black

#added 20230422
setw -g mode-keys vi
set -g mouse off
set -sg escape-time 1
setw -g monitor-activity on
set -g visual-activity on
unbind C-b
set -g prefix C-Space
bind C-Space send-prefix
# switch panes using Ctrl-arrow without prefix
bind -n C-Left select-pane -L
bind -n C-Right select-pane -R
bind -n C-Up select-pane -U
bind -n C-Down select-pane -D
# resize panes
bind H resize-pane -L 5   # 5 px bigger to the left
bind J resize-pane -D 5   # 5 px bigger down
bind K resize-pane -U 5   # 5 px bigger up
bind L resize-pane -R 5   # 5 px bigger right
#bind Escape copy-mode
bind C-[ copy-mode
bind -T copy-mode-vi 'v' send -X begin-selection
# copy with 'enter' or 'y' and send to mac os clipboard: http://goo.gl/2Bfn8
#unbind -T copy-mode-vi Enter
#bind -T copy-mode-vi Enter send -X copy-pipe-and-cancel "reattach-to-user-namespace pbcopy"
bind -T copy-mode-vi ' ' send -X copy-pipe-and-cancel "reattach-to-user-namespace pbcopy"
# paste
bind p paste-buffer
# paste from system clipboard MacOS
#bind C-v run \"tmux set-buffer \"$(reattach-to-user-namespace pbpaste)\"; tmux paste-buffer"
# show session, window, pane in left status bar
set -g status-left-length 40
set -g status-left '#[fg=green] #S #[fg=yellow]#I/#[fg=cyan]#P '
# highlight current window
setw -g window-status-style fg=cyan,bg=colour235
setw -g window-status-current-style fg=white,bold,bg=red

# set color of active pane
set -g pane-border-style fg=colour240,bg=black
set -g pane-active-border-style fg=green,bg=black

#added 20230422

# reload config file (change file location to your the tmux.conf you want to use)
bind r source-file ~/.tmux.conf; display "Reloaded tmux config!"
# split panes using | and -
bind | split-window -h
bind - split-window -v
unbind '"'
unbind %

#set inactive/active window styles
set -g window-style 'fg=colour247,bg=colour235'
set -g window-active-style 'fg=colour250,bg=black'

